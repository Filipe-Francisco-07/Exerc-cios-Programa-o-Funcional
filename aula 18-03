
media n1 n2
  |n>= 7 = "aprovado"
  |n <= 3 = "reprovado"
  |otherwise = "exame"
  where n = (n1+n2)/ 2

somamultiplicaXY x y = (x + y , x*y)

soma 1 = 1 

soma n = n + soma(n-1)


somaLista [] =  0
somaLista (x:xs) = x +somaLista xs

somaLista2 lsita = foldr (+) 0 lista


main = do

  let med = media 7 5
  let somamult = somamultiplicaXY 2 3
  let somadoida = soma 10
  
  let lista = [5,0,10]
  
  print("lista soma: "++show (somaLista lista))
  
  print ("MÃ©dia: "++show(med)," Mult"++show(somamult)," Soma doida: "++show(somadoida)) 


  

  
